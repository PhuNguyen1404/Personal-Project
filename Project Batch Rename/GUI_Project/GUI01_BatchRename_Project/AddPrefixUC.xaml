<UserControl x:Class="GUI01_BatchRename_Project.AddPrefixUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI01_BatchRename_Project"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="392">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Prefix:" FontSize="36" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="PrefixTextbox" BorderBrush="#FF3D3535" Width="300" MaxLength="254" FontSize="25" Height="35" TextChanged="PrefixTextbox_TextChanged" PreviewTextInput="PrefixTextbox_PreviewTextInput"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20,0,20,0">
            <TextBlock Text="*Example:" FontWeight="Bold" FontSize="36" />
            <Label Content="Prefix: CV" FontSize="24"/>
            <Label Content="Result: data -> CVdata" FontSize="24"/>
        </StackPanel>
    </Grid>
</UserControl>
