<UserControl x:Class="GUI01_BatchRename_Project.AddCounterUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI01_BatchRename_Project"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="392" >

    <Grid >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Choose counter format: " FontSize="30" FontWeight="Bold"/>
            <RadioButton Name="FormalRadio" Click="FormalRadio_Click" FontSize="20" >Formal Numeral</RadioButton>
            <RadioButton Name="RomanRadio" Click="RomanRadio_Click" FontSize="20">Roman Numeral</RadioButton>
        </StackPanel>
    </Grid>

</UserControl>
